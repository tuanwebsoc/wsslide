<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1" client="site" method="upgrade">
	<name>WS Slide</name>
	<author>websoc project</author>
	<creationDate>July 2014</creationDate>
	<copyright>Copyright (C) 2014 - 2015 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>info@websoc.vn</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>3.0.0</version>
	<description>MOD_WSSLIDE_FIELD_DESCRIPTION</description>
	<files>
		<filename module="mod_wsslide">mod_wsslide.php</filename>
		<folder>tmpl</folder>
		<folder>templates</folder>
		<folder>fields</folder>
		<folder>libraries</folder>
		<filename>index.html</filename>
		<filename>mod_wsslide.php</filename>
		<filename>mod_wsslide.xml</filename>
	</files>
	
	<media folder="media" destination="mod_wsslide">
       <folder>css</folder>
       <folder>js</folder>
       <file>index.html</file>
    </media>
	
	<languages folder="language">
        <language tag="en-GB">en-GB.mod_wsslide.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/modules/mod_wsslide/fields" >
				<field name="dataslide" type="wsslide" label="MOD_WSSLIDE_FIELD_LABEL"/>
			</fieldset>
		</fields>
	</config>
</extension>
